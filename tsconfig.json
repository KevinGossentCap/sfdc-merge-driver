{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "es2015.promise"
    ],
    "module": "commonjs",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "rootDirs": [
      "./src"
    ],
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
